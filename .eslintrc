{
  "env": {
    "browser" : true,
    "node" : true,
    "es6" : true
  },
  "rules": {
    "no-var": "error",
    "semi": "error",
    "indent": "error",
    "no-multi-spaces": "error",
    "space-in-parens": "error",
    "no-multiple-empty-lines": "error",
    "prefer-const": "error",
    "no-use-before-define": "error",
    "max-len": ["error", 140, { "ignoreUrls": true }]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  }
}